<div class="d-flex">
  <!-- left -->
  <div class="col-8">
    <!-- valuation and big chart (left top) -->
    <div style="overflow:hidden;">
      <%= render 'users/chart-card', valuation: @valuation %>
    </div>
    <!-- News articles (left bottom) -->
    <div data-controller="news">
      <h1 class="text-white ml-5 mt-3">News</h1>
      <div data-news-target="container">
        <% article =  {
        headline: "Retailâ€™s 5 Biggest Winners and Laggards During the Pandemic",
        image: "https://images.barrons.com/im-310742/social",
        source: "MarketWatch",
        summary: "GameStop stock gained more than 6,000%. On the flip side, Winmark shares fell almost 7%.",
        url: "https://finnhub.io/api/news?id=93f85e525ab3509e20d053612cca8e7bc80b4c364271753eedc6ae74b7a851c3"
    } %>
        <%= render 'api/v1/news/card', article: article %>
      </div>
    </div>
  </div>
  <!-- right -->
  <div class="col-4">
    <div class="stock-cards-padding sticky-top">
      <div class="stock-cards-wrapper card">
        <div class="stock-cards-header">
          <h2>My Stocks</h2>
        </div>
        <div class="mt-3 stock-cards card" >
          <% @products.each do |product| %>
            <%= render 'users/small-card', product: product, price: product.get_product_price, purchases: current_user.purchases%>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Stock cards (top right) -->
  </div>
</div>
