
<div class="container-fluid">
  <div class="row">
    <div class='col-8'>
      <div class="card card-trip">
        <h2>$<%= number_with_delimiter(@total_valuation.round(2), :delimiter => ",") %></h2>
          <%= line_chart  @user.valuations.group(:date).sum(:total_valuation), id: 'purchase' %>
      </div>
      <div class="d-flex justify-content-around">
        <div class="card-dash">
          <h2>hi</h2>
          <%= line_chart @products_valuation_pair %>
        </div>
        <div class="card-dash">
          <h2>hi</h2>
          <%= line_chart @products_valuation_pair %>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div id="user-stock" class="card card-trip">
        <h2>My stocks</h2>
        <% @user.products.each do |product| %>
        <ul>
          <li>
            <%= link_to  "#{product.name}", product_path(product) %>, <%= link_to  "#{product.ticker}", product_path(product) %>
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>

</div>

