
<div class="container-fluid">
  <div class="row">
    <div class='col-8'>
      <div class="card card-trip">
        <h2 class="text-center">$<%= number_with_delimiter(@total_valuation.round(2), delimiter: ",") %></h2>
        <%= line_chart charts_valuation_history_path, points: false, min: current_user.valuations.map { |valuation| valuation.total_valuation }.min - 3000 %>
      </div>
      <div>
        <% @articles.flatten.each do |article| %>
          <%= render 'products/news_card', article: article %>
        <% end %>
      </div>
    </div>
    <div class="col-4">
          <div class="mt-3 col-8 stock-cards">
            <% @products.each do |product| %>
            <%= render 'users/small-card', product: product, price: product.get_product_price, purchases: current_user.purchases %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

