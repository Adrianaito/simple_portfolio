<button type="button" data-toggle="modal" data-target="#myModal">Launch modal</button>
<div class="container-fluid">
  <div class="row">
    <div class='col-8'>
      <div class="card card-trip">
        <h2 class="text-center">$<%= number_with_delimiter(@total_valuation.round(2), delimiter: ",") %></h2>
        <%= line_chart charts_valuation_history_path, points: false, min: current_user.valuations.map { |valuation| valuation.total_valuation }.min - 3000 %>
      </div>
    </div>
    <div class="col-4">
      <div id="user-stock" class="card card-trip p-4">
        <h2>My stocks</h2>
        <% @user.products.each do |product| %>
        <ul>
          <li>
            <%= link_to  "#{product.name}", product_path(product) %>, <%= link_to  "#{product.ticker}", product_path(product) %>
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container ml-0 mt-3">
  <% @product_price_pair.each do |product_price_pair| %>
  <%= render 'users/small-card', product: product_price_pair[0], price: product_price_pair[1] %>
  <% end %>
</div>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="container mt-5 w-25">
        <div class="form-card">
          <%= simple_form_for @purchase do |f| %>
            <%= f.association :product %>
            <%= f.association :platform %>
            <%= f.input :price_at_purchase, input_html: { min: 1} %>
            <%= f.input :shares, as: :float, input_html: { min: 1} %>
            <%= f.input :date, as: :date, html5: true  %>
            <%= f.submit class: "btn btn-primary" %>
          <% end %>
        </div>
    </div>
  </div>
</div>

