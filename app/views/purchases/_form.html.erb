<div class="px-5 pb-5">
  <%= simple_form_for purchase do |f| %>
    <div class="d-flex justify-content-between">
      <%= f.association :product, wrapper_html: {style: "width: 45%;"}, input_html: { class: "select2"} %>
      <%= f.association :platform, wrapper_html: {style: "width: 45%;"} %>
    </div>
    <%= f.input :price_at_purchase, placeholder: "Please enter in USD" %>
    <%= f.input :shares, label: 'Number of shares', as: :float, input_html: { min: 1} %>
    <%= f.input :date, as: :date, html5: true , input_html: { value: Date.today }%>
    <%= f.submit 'Save', class: "btn btn-primary" %>
  <% end %>
</div>
