<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <% if user_signed_in? %>
  <%= link_to dashboard_path, class: "navbar-brand d-flex align-items-center" do %>
  <%= image_tag "noun_Stock_3423548.svg" %>
  <p>Simple Portfolio</p>
  <% end %>
  <% else %>
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "noun_Stock_3423548.svg" %>
  <% end %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class='d-flex'>
    <%= render 'shared/search_form', class: "form-radius btn-radius form-color" %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto list-unstyled">
        <% if user_signed_in? %>
        <li class="nav-item active mt-2">
          <i class="fas fa-plus-circle" data-toggle="modal" data-target="#myModal"></i>
          <div id="myModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog"
            aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content modal-color">
                <%= render 'purchases/form', purchase: @new_purchase %>
              </div>
            </div>
          </div>
        <li class="nav-item dropdown">
          <%= image_tag "https://i.pinimg.com/originals/29/24/89/292489e7d0bf8ce7d5ffd81be62d0800.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "new ", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "navbar-link" %>
          <%= link_to "Sign up", new_user_registration_path, class: 'navbar-link' %>
        </li>
        <% end %>
      </ul>
    </div>
    </li>
  </div>

</div>